# Режим работы приложения
# dev - режим разработки
# prod - режим продакшена (требует OPENROUTER_API_KEY и BOT_TOKEN)
MODE=dev

# Уровень логирования
# DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# API ключ OpenRouter (обязателен в режиме prod)
OPENROUTER_API_KEY=

# Токен Telegram-бота (обязателен в режиме prod)
BOT_TOKEN=

# Модели LLM
MODEL_FAST=openai/gpt-3.5-turbo
MODEL_SMART=openai/gpt-4-turbo

# Дневной лимит токенов
TOKEN_BUDGET_DAILY=50000

# Режим только локально (без LLM)
# 0 - использовать LLM
# 1 - только локальные ответы
LOCAL_ONLY=0

# Пороги предупреждений для диагностики системы
CPU_WARN=85
RAM_WARN=90
DISK_WARN=90
TEMP_WARN=

# Интервал проверки диагностики (в секундах)
DIAGNOSTICS_INTERVAL_SECONDS=60

# ID чата/пользователя Telegram для отправки уведомлений
ALERTS_CHAT_ID=

# Путь к модели Vosk для распознавания речи
# По умолчанию: models/vosk-ru
VOSK_MODEL_PATH=models/vosk-ru

# Настройки микрофона
# Индекс устройства ввода (микрофон). Если не указан, используется устройство по умолчанию
# Узнать индекс: python -c "import sounddevice as sd; print(sd.query_devices())"
MIC_DEVICE_INDEX=
MIC_SAMPLE_RATE=16000
MIC_CHUNK_SIZE=4000

# Настройки WebRTC VAD для улучшения качества распознавания речи (опционально)
# 0 - отключено, 1 - включено
STT_USE_VAD=0
# Агрессивность VAD (0-3, где 3 - самая агрессивная)
STT_VAD_AGGRESSIVENESS=2

# Адаптивный порог для hotword
# 0 - отключен, 1 - включен (рекомендуется)
HOTWORD_ADAPTIVE_THRESHOLD=1
