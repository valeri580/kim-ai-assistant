# Режим работы (dev/prod)
MODE=dev

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# OpenRouter API (обязателен в режиме prod)
OPENROUTER_API_KEY=your_openrouter_key_here

# Telegram Bot Token (обязателен в режиме prod)
BOT_TOKEN=your_telegram_bot_token_here

# Модели LLM (используйте реальные модели с https://openrouter.ai/models)
# Быстрая модель (дешёвая/быстрая)
MODEL_FAST=openai/gpt-3.5-turbo
# Умная модель (для сложных задач)
MODEL_SMART=openai/gpt-4-turbo

# Дневной лимит токенов
TOKEN_BUDGET_DAILY=50000

# Путь к модели Vosk для голосового ассистента (скачайте с https://alphacephei.com/vosk/models)
VOSK_MODEL_PATH=models/vosk-ru

# Режим только локально (1 - без обращения к LLM, 0 - с LLM)
LOCAL_ONLY=0

# Пороги для диагностики системы (проценты)
CPU_WARN=85
RAM_WARN=90
DISK_WARN=90
TEMP_WARN=

# Интервал проверки диагностики (в секундах)
DIAGNOSTICS_INTERVAL_SECONDS=60

# Telegram Chat ID для отправки уведомлений о проблемах системы
# Как получить: напишите боту @userinfobot, он вернёт ваш ID
ALERTS_CHAT_ID=123456789
